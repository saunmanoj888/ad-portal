<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to "Ad Portal", root_path, class: "text-muted" %></h5>

  <nav class="my-2 my-md-0 mr-md-3">
    <% if user_signed_in? && current_user.ad_space_provider? %>
      <%= render "layouts/nav/ad_provider_nav" %>
    <% elsif user_signed_in? && current_user.ad_space_agent? %>
      <%= render "layouts/nav/ad_agent_nav" %>
    <% elsif user_signed_in? && current_user.organisations? %>
      <%= render "layouts/nav/org_user_nav" %>
    <% end %>
  </nav>
  <% if user_signed_in? %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn btn-outline-primary mr-3" %>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-success" %>
  <% end %>
</div>