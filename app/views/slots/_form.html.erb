<%= form_with(model: slot, local: true) do |form| %>
  
  <%= render "layouts/error", obj: slot %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Save slot", class: "btn btn-success" %>
  </div>
<% end %>
